{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018", "DOM"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./app",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "app/services/api.ts",
    "app/services/authService.ts",
    "app/services/transactionService.ts"
  ]
}